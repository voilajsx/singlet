# .env
# Environment variables for your Singlet application
NODE_ENV=development # Set to 'production' for production environment
PORT=3000
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=info # debug, info, warn, error
ENABLE_FILE_LOGGING=true # true or false
LOG_DIR=logs
LOG_FILENAME=app.log
LOG_RETENTION_DAYS=7
LOG_MAX_SIZE=10485760 # 10MB

# Example Secret (for demonstration of interpolation)
DB_PASSWORD=mySuperSecretDbPassword