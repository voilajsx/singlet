{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@platform/*": ["./platform/*"],
      "@platform/lib/*": ["./platform/lib/*"]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "checkJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/node_modules/*", "dist"],
  "typeAcquisition": {
    "enable": false
  }
}