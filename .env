# ====================================
# @voilajsx/singlet Framework Environment Configuration
# Copy this file to .env and customize your values
# ====================================

# ====================
# FRAMEWORK SETTINGS
# ====================
NODE_ENV=development
SINGLET_VERSION=1.0.0

# ====================
# SERVER CONFIGURATION
# ====================
HOST=localhost
PORT=3000

# SSL Configuration (for production)
SSL_ENABLED=false
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CERT_PATH=/path/to/ssl/certificate.crt

# ====================
# AUTHENTICATION & SECURITY
# ====================

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=singlet-jwt-secret-change-in-production-must-be-32-chars-long
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Cookie Configuration (CHANGE THESE IN PRODUCTION!)
COOKIE_SECRET=singlet-cookie-secret-change-in-production-must-be-32-chars
COOKIE_DOMAIN=localhost

# CSRF Protection (CHANGE THIS IN PRODUCTION!)
CSRF_SECRET=singlet-csrf-secret-change-in-production-must-be-32-chars
CSRF_ENABLED=false

# Password Requirements
PASSWORD_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=false

# Authentication Settings
ALLOW_REGISTRATION=true
REQUIRE_EMAIL_VERIFICATION=false
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
MAX_CONCURRENT_SESSIONS=5

# Session Management
SESSION_CLEANUP_INTERVAL=3600000
SESSION_MAX_AGE=604800000

# ====================
# CORS CONFIGURATION
# ====================
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,https://localhost:3000
CORS_CREDENTIALS=true

# ====================
# FEATURE FLAGS
# ====================
FEATURE_WELCOME=true
FEATURE_GREETING=true
FEATURE_SECURITY=true
FEATURE_LOGGING=true
FEATURE_VALIDATION=true

# ====================
# LOGGING CONFIGURATION
# ====================
LOG_LEVEL=info
LOG_DIR=platform/logs
LOG_FILE=app.log
LOG_RETENTION_DAYS=7
LOG_MAX_SIZE=10485760
LOG_ENABLE_FILE=true

# ====================
# RATE LIMITING
# ====================
# General API Rate Limiting
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=100

# Auth-specific Rate Limiting
AUTH_LOGIN_RATE_LIMIT_WINDOW=900000
AUTH_LOGIN_RATE_LIMIT_MAX=5
AUTH_REGISTER_RATE_LIMIT_WINDOW=3600000
AUTH_REGISTER_RATE_LIMIT_MAX=3
AUTH_REFRESH_RATE_LIMIT_WINDOW=900000
AUTH_REFRESH_RATE_LIMIT_MAX=20

# ====================
# CLOUD DEPLOYMENT (Production)
# ====================
CLOUD_PROVIDER=local
CLOUD_REGION=us-east-1
INSTANCE_ID=dev-instance

# ====================
# DATABASE (Future Use)
# ====================
# DATABASE_URL=postgresql://username:password@localhost:5432/singlet
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# ====================
# EMAIL (Future Use)
# ====================
# EMAIL_PROVIDER=smtp
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
# EMAIL_FROM=noreply@yourapp.com

# ====================
# REDIS/CACHE (Future Use)
# ====================
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=300000

# ====================
# STORAGE (Future Use)
# ====================
# STORAGE_PROVIDER=local
# STORAGE_BASE_PATH=./uploads
# STORAGE_BASE_URL=/uploads

# AWS S3 (if using S3 storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# ====================
# MONITORING & ANALYTICS (Future Use)
# ====================
# SENTRY_DSN=https://your-sentry-dsn
# ANALYTICS_ENABLED=false
# HEALTH_CHECK_ENABLED=true
# METRICS_ENABLED=false

# ====================
# DEVELOPMENT SETTINGS
# ====================
# Only used in development
DEBUG_MODE=true
HOT_RELOAD=true
MOCK_EXTERNAL_SERVICES=true

# ====================
# PRODUCTION OVERRIDES
# ====================
# Set these in production environment:
# NODE_ENV=production
# SSL_ENABLED=true
# CSRF_ENABLED=true
# CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
# REQUIRE_EMAIL_VERIFICATION=true
# ALLOW_REGISTRATION=false
# LOG_LEVEL=warn